<phpunit 
    verbose = "true"
    colors = "true">
    <testsuites>
        <testsuite name="ClientFactory">
            <file>ClientFactory.php</file>
        </testsuite>
        <testsuite name="ClientTest">
            <file>Client/TestAllClient.php</file>
        </testsuite>
        <testsuite name="AuthTest">
            <file>Auth/TestAllOauth.php</file>
        </testsuite>
    </testsuites>
    <logging>
        <log 
            type="coverage-html" 
            target="./../docs/xdebug" 
            charset="utf-8" 
            yui="true" 
            highlight="false" 
            lowUpperBound="35" 
            highLowerBound="70" />
        <log
            type="testdox-html"
            target="./../docs/testdox.html" />
    </logging>
</phpunit>
